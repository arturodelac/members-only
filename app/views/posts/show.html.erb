
    <div class="content">
        <div class="posts" id="show">
            <h1 class="post-title">
                <%= @post.title %>
            </h1>
                        <h1 class="post-body-no-overflow"><%=@post.body%></h1>


            
            <%if current_user == @post.user%>

            <div class="links-post">
                <button class="np-button", id="linkbt"> <%= link_to "Edit Article", edit_post_path(@post),class: "np-link-2" %></button>
                 <button class="np-button", id="linkbt"> <%= link_to "Destroy", post_path(@post),class: "np-link-2", data: {
                                    turbo_method: :delete,
                                    turbo_confirm: "Are you sure?"
                 }%></button>
            </div>
          
            <%end%>
        </div>
           <%if user_signed_in?%>
      <%=render 'comments/form',post: @post %>
        <%end%>
          <%=render 'comments',post: @post%>
       
      
