<div class="content">
  <div class="posts" id="show">
    <h2 class="post-title">Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :username,class:"author" %><br />
        <%= f.text_field :username, class:"log-input", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :password,class:"author", id:"password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class:"log-input", autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation,class:"author" %><br />
        <%= f.password_field :password_confirmation, class:"log-input", autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
      <button class="np-button bt2" id="log-in">Sign Up</button>
        
      </div>
    <% end %>
    
    
  </div>
</div>
