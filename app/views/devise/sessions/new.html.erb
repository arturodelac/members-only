<div class="content">
  <div class="posts", id="show">
    <h2 class="post-title">Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :username,class:"author"  %><br />
        <%= f.text_field :username, autofocus: true,class:"log-input", autocomplete: "username" %>
      </div>
    
      <div class="field">
        <%= f.label :password,class:"author" %><br />
        <%= f.password_field :password, class:"log-input",autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"author" %>
        </div>
      <% end %>
    
      <div class="actions">
        <button class="np-button bt2" id="log-in">Log In</button>
      </div>
    <%= devise_error_messages! %>
    <% end %>
    

    <%= render "devise/shared/links" %>
  </div>
</div>
